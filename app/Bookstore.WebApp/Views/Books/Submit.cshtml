@model Bookstore.WebApp.Models.SubmitBookViewModel

@{
    ViewBag.Title = "Submit";
}

<h2>Submit your book to the site</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Submit", "Books", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken();

                <div class="form">
                    <div class="form-group">
                        @Html.LabelFor(model => model.BookTitle, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.BookTitle, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BookTitle, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.BookDescription, new { @class = "control-label"})
                        @Html.TextAreaFor(model => model.BookDescription, new { @class = "form-control", rows = 8 })
                        @Html.ValidationMessageFor(model => model.BookDescription, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Price, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Price, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.BookImage, new { @class = "control-label" })
                        <input type="file" name="BookImage" />
                        @Html.ValidationMessageFor(model => model.BookImage, null, new { @class = "text-danger" })
                    </div>
                    <p>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </p>
                </div>
            }
        </div>
    </div>
</div>